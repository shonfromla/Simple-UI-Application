<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.assignment5"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme"
        android:label="@string/app_name" >
        
        <activity
            android:name="com.example.SimpleUI.MainActivity"
            android:label="@string/app_name" 
            android:theme="@style/Theme.Actionbarstyle" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.SimpleUI.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"            
            android:theme="@style/Theme.Actionbarstyle"       
            android:parentActivityName="com.example.SimpleUI.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assignment5.MainActivity" />
        </activity>
    </application>

</manifest>
